<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   <title>Mapstraction Examples - Google v3</title>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="../source/mxn.js?(googlev3)" type="text/javascript"></script> 
<style type="text/css">
#mapdiv {
  height: 400px;
}
</style> 

<script type="text/javascript">
//<![CDATA[

  var m;
  function initialize() {
      // create mxn object
      m = new mxn.Mapstraction('mapdiv','googlev3');
      m.addControls({zoom:'small'});

      var latlon = new mxn.LatLonPoint(51.53468413093941, -0.09026169776916504)

      // put map on page
      m.setCenterAndZoom(latlon, 16);

      //add a marker
      var marker = new mxn.Marker(latlon);
      m.addMarker(marker,true); 
  }

  function changetohybrid(){
     m.setMapType(mxn.Mapstraction.HYBRID);  
  }

//]]>
</script> 

</head>
<body onload="initialize();">
<center>
<table border='1' width='50%'>
<tr><td><div id="mapdiv"></div></td>
</tr>
</table>
<a href='#' onclick='changetohybrid();'>change to hybrid</a>
</center>
</body> 
</html>

